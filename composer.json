{
    "name": "yiioverflow/yii2-file-kit",
    "description": "Yii2 file upload and storage kit",
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Roopan Valiya veetil",
            "email": "yiioverflow@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "yiisoft/yii2": "^2.0.0",
        "yiisoft/yii2-jui": "^2.0.0",
        "league/url": "^3.0",
        "league/flysystem": "^1.0",
        "bower-asset/blueimp-file-upload": "^9.7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5.0",
        "creocoder/yii2-flysystem": "~0.8"
    },
    "suggest": {
        "intervention/image": "Allows image manipulation"
    },
    "autoload": {
        "psr-4": { "yiioverflow\\filekit\\": "src/" }
    },
    "extra":{
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
